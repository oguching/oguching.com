<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xlmns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title><%- title %></title>
        <link><%- uri %></link>
        <description><%- description %></description>
        <atom:link href="<%- uri %>/rss.xml" rel="self" type="application/rss+xml" />
        
        <% for(slug in public.blog._data) { %>
        <% var post = public.blog._data[slug] %>
          <item>
              <title><%- post.title %></title>
              <description><![CDATA[<%- partial("blog/" + slug) %>]]></description>
              <pubDate><%- Date(post.date) %></pubDate>
              <link><%- uri %>/blog/<%- post %></link>
              <guid isPermaLink="true"><%- uri %>/blog/<%-post %></guid>
          </item>
        <% } %>
    </channel>
</rss>